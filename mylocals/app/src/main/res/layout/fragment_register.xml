<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/vertical_gap"
    android:showDividers="middle"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="CRIAR CONTA"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/fullname_field"
        android:inputType="textCapWords"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingHorizontal="20dp"
        android:hint="NOME E SOBRENOME"
        android:textColorHint="@color/gray_400"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/input_field"
        android:drawableStart="@drawable/ic_person_selector"
        android:drawablePadding="20dp"
        />

    <EditText
        android:id="@+id/email_field"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingHorizontal="20dp"
        android:hint="E-MAIL"
        android:textColorHint="@color/gray_400"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/input_field"
        android:drawableStart="@drawable/ic_email_selector"
        android:drawablePadding="20dp"
        />

    <EditText
        android:id="@+id/password_field"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingHorizontal="20dp"
        android:hint="SENHA"
        android:textColorHint="@color/gray_400"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/input_field"
        android:drawableStart="@drawable/ic_lock_selector"
        android:drawablePadding="20dp"
        />

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:text="CADASTRAR"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/primary_button"
        />

</LinearLayout>